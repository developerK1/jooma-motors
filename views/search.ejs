<%- include('../partials/head.ejs') %>
<%- include('../partials/nav.ejs') %>
<section id="cars">
    <h1>THIS IS SEARCH COMPONENT</h1>
    <div class="container" class="container-fluid">
        <fiure>
            <form id="search-form" action="/filter/" method="POST">
                <div>
                    <label>Make</label>
                    <input type="text" placeholder="" id="make" name="make"/>
                </div>
                <div>
                    <label>Price</label>
                    <select name="range">
                        <option> 10 000.00 - 50 000.00</option>
                        <option> 50 000.00 - 120 000.00</option>
                        <option> 120 000.00 - 320 000.00</option>
                        <option> 320 000.00 - 660 000.00</option>
                        <option> 660 000.00 - 1 000 000.00</option>
                        <option> 1 000 000.00 +</option>
                    </select>
                </div>
                <div>
                    <button>Find</button>
                </div>
            </form>


        </fiure>
        <div class="row">
            <% if(data){
                
                data.map( item =>{ %>
                    <article class="col-lg-4 col-md-4">
                        <aside>
                            <div class="img">
                                <img src="assets/<%=item.img%>" alt="car-dealership" />
                            </div>
                            <h4>Name : <%=item.make%></h4>
                            <p>Pre Owned :  <%=item.preOwned%></p>
                            <p>Price : <span class="symbol">R</span> <%=item.price%></p>
                            <p>Colour :  <%=item.coulor%></p>
                            <div>
                                <a href="/specifications/<%=item.id%>"><button>View Details</button></a>
                            </div>
                        </aside>
                    </article>
                <%})   
            }%>
        </div>
    </div>
</section>


